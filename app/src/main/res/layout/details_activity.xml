<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/location_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:layout_marginBottom="@dimen/bigger_margin"
                android:contentDescription="@string/image_description"
                android:scaleType="centerCrop"
                tools:src="@drawable/wolomin_panorama" />

            <TextView
                android:id="@+id/title_view"
                style="@style/TextStyle"
                android:textSize="@dimen/title_size"
                android:textStyle="bold"
                tools:text="@string/about_wolomin" />

            <TextView
                android:id="@+id/address_view"
                style="@style/TextStyle"
                android:drawablePadding="@dimen/small_margin"
                android:drawableStart="@drawable/ic_location_on_black"
                android:textSize="@dimen/bigger_text"
                tools:text="@string/wolomin_coordinates" />

            <TextView
                android:id="@+id/location_description"
                style="@style/TextStyle"
                android:textSize="@dimen/normal_text"
                tools:text="@string/wolomin_info" />

        </LinearLayout>
    </ScrollView>
</layout>